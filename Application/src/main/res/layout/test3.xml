<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="@color/colorAppBG"
    앱 배경색 변경-->

    <LinearLayout
        android:id="@+id/page_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <!--android:background="@color/colorBlack"-->

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20sp"
            android:text="좋아하는 하늘을 설정해 주세요"
            android:textSize="15sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sunsetpurple"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:src="@drawable/sunsetpurple"
                android:background="@drawable/rounded_fg"
                android:scaleType="fitStart"></ImageView>
            <ImageView
                android:id="@+id/sunsetred"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/sunsetred"
                android:scaleType="fitStart"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/greenblueblack"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/greenblueblack"
                android:scaleType="fitStart"></ImageView>
            <ImageView
                android:id="@+id/yellowblack"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/yellowblack"
                android:scaleType="fitStart"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seablue"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/seablue"
                android:scaleType="fitStart"></ImageView>
            <ImageView
                android:id="@+id/sunsetorange"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/sunsetorange"
                android:scaleType="fitStart"></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/greenblue"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/greenblue"
                android:scaleType="fitStart"></ImageView>
            <ImageView
                android:id="@+id/plane"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/plane"
                android:scaleType="fitStart"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sunsetorangepurple"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/sunsetorangepurple"
                android:scaleType="fitStart"></ImageView>
            <ImageView
                android:id="@+id/sky2"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                android:layout_weight="1"
                android:background="@drawable/rounded_fg"
                android:src="@drawable/sky"
                android:scaleType="fitStart"></ImageView>
        </LinearLayout>
    </LinearLayout>


</ScrollView>