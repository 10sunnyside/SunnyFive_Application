<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:textColor="@color/cardview_dark_background">

<LinearLayout
    android:id="@+id/page_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/page1_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_outline_sunny2"
            android:text="햇빛 조절"
            android:textColorHighlight="@color/colorPink200"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/scenario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_scenario"
            android:text="햇빛 시나리오"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/alarm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_alarm"
            android:text="햇빛 알람"
            android:textColor="#000000"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/page1_1_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/page1_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/sun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_sun"
            android:text="밝은 햇빛"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/vitaminD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_vitamind"
            android:text="비타민D 합성"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/sky"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/ic_panorama"
            android:text="배경색 조절"
            android:textColor="#000000"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>